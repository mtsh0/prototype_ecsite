<% provide(:title, "配送先住所の一覧") %>
<h1>Addresses#index</h1>
<p>Find me in app/views/addresses/index.html.erb</p>
<p>配送先情報</p>
<table>
  <% @addresses.each do |address| %>
      <tr>
        <!--登録日-->
        <td class="text-center">
          <%= address.created_at.strftime('%Y/%m/%d') %><br />
        </td>
        <!--配送先氏名-->
        <td class="text-right"><%= address.user_name %></td>
        <!--配送先氏名(かな)-->
        <td><%= address.name_kana %></td>
        <!--電話番号-->
        <td><%= address.tel %></td>
        <!--郵便番号-->
        <td><%= address.postalcode %></td>
        <!--都道府県-->
        <!--<td><% address.prefecture.name %></td>-->
        <td><%= address.city %><%= address.street %></td>
        <!--その他詳細-->
        <td><%= address.others %></td>
        <td><%= link_to '変更する', edit_address_path(address) %></td><td><%= link_to '削除する', address_path(address), method: :delete %></td>
        <br>
      </tr>
  <% end %>
</table>


  <br>
  <%= link_to '戻る', :back %>